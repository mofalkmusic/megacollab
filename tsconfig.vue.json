{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "shared/**/*"],
	"exclude": ["src/**/__tests__/*", "server/**/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vue.tsbuildinfo",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./shared/*"]
		},
		"baseUrl": "."
	}
}
